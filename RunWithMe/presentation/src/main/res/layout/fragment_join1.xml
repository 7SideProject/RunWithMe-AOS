<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="joinVM"
            type="com.side.runwithme.view.join.JoinViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.join.Join1Fragment">


        <com.side.runwithme.component.CustomToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:back_image="@drawable/baseline_arrow_back_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/join" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_join"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_next">

            <TextView
                android:id="@+id/tv_join_phone_number"
                style="@style/header_text"
                android:layout_marginStart="@dimen/margin_regular"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:text="@string/phone"
                android:textSize="@dimen/fontsize_h4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/et_join_phone_number"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="- 없이 번호만 입력하세요"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:text="@={joinVM.phoneNumber}"
                app:layout_constraintStart_toStartOf="@id/tv_join_phone_number"
                app:layout_constraintEnd_toStartOf="@id/btn_send_number"
                app:layout_constraintTop_toTopOf="@id/btn_send_number"
                app:layout_constraintBottom_toBottomOf="@id/btn_send_number"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_send_number"
                style="@style/WeakSmallButton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/send_verify_number"
                android:enabled="false"
                android:layout_marginEnd="@dimen/margin_regular"
                android:layout_marginTop="@dimen/margin_regular"
                android:padding="@dimen/padding_small"
                enabledSendButton="@{joinVM.phoneNumber}"
                app:layout_constraintStart_toEndOf="@id/et_join_phone_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_join_phone_number"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/btn_send_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_join_verify_number"
                    style="@style/header_text"
                    android:layout_marginStart="@dimen/margin_regular"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/verify_number"
                    android:textSize="@dimen/fontsize_h4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <EditText
                    android:id="@+id/et_join_verify_number"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:hint="인증 번호"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:text="@={joinVM.verifyNumber}"
                    android:layout_marginEnd="@dimen/margin_regular"
                    app:layout_constraintStart_toStartOf="@id/tv_join_verify_number"
                    app:layout_constraintEnd_toStartOf="@id/btn_verify"
                    app:layout_constraintTop_toTopOf="@id/btn_verify"
                    app:layout_constraintBottom_toBottomOf="@id/btn_verify"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_verify"
                    style="@style/WeakSmallButton"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/verify"
                    android:enabled="false"
                    android:layout_marginEnd="@dimen/margin_regular"
                    android:layout_marginTop="@dimen/margin_regular"
                    android:padding="@dimen/padding_small"
                    enabledVerifyButton="@{joinVM.verifyNumber}"
                    app:layout_constraintStart_toEndOf="@id/et_join_verify_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_join_verify_number"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            style="@style/WeakButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:includeFontPadding="false"
            android:text="@string/next"
            enabledNextButton="@{joinVM.complete}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_join" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>