<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="challengeCreateVM"
            type="com.side.runwithme.view.challenge_list.create.ChallengeCreateViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.crew.create.CrewCreate2Fragment">

        <com.side.runwithme.component.CustomToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:back_image="@drawable/baseline_arrow_back_24"
            app:title="@string/create_challenge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            android:layout_marginBottom="8dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:layout_marginHorizontal="16dp">

                <ImageView
                    android:id="@+id/iv_page"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/page2" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="챌린지의 시작일과\n목표, 시작 시간을 입력해주세요."
                    android:textSize="@dimen/fontsize_h3"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/iv_page"/>

                <TextView
                    android:id="@+id/tv_challenge_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_start_date"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_challenge_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_start_date"
                    android:layout_marginTop="8dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_challenge_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_rectangle_grey"
                        tools:text="2023-01-01"
                        android:text="@{challengeCreateVM.dateStart}"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <ImageView
                        android:id="@+id/iv_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_calendar"
                        android:padding="12dp"
                        app:layout_constraintTop_toTopOf="@id/btn_challenge_start_date"
                        app:layout_constraintEnd_toEndOf="@id/btn_challenge_start_date"
                        app:layout_constraintBottom_toBottomOf="@id/btn_challenge_start_date"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_challenge_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/challenge_end_date"
                    app:layout_constraintTop_toBottomOf="@id/layout_challenge_start_date"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginVertical="16dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_challenge_end_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_rectangle_grey"
                    tools:text="2023-01-01"
                    android:text="@{challengeCreateVM.dateEnd}"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_end_date"
                    android:enabled="false"
                    android:layout_marginVertical="8dp"
                    />

                <TextView
                    android:id="@+id/tv_challenge_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_challenge_end_day"
                    android:layout_marginVertical="16dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_challenge_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{challengeCreateVM.goalWeeks.toString()}"
                    tools:text="1"
                    app:layout_constraintTop_toBottomOf="@id/tv_challenge_duration"
                    android:background="@drawable/border_rectangle_grey"
                    android:layout_marginVertical="8dp"
                    />

                <TextView
                    android:id="@+id/tv_challenge_duration_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/week"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_regular"
                    app:layout_constraintTop_toTopOf="@id/btn_challenge_duration"
                    app:layout_constraintEnd_toEndOf="@id/btn_challenge_duration"
                    app:layout_constraintBottom_toBottomOf="@id/btn_challenge_duration"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            style="@style/StrongButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>