<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.crew.create.CrewCreate2Fragment">

        <com.side.runwithme.component.CustomToolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:back_image="@drawable/baseline_arrow_back_24"
            app:title="챌린지 크루 생성"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_main"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            android:layout_marginBottom="8dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/toolbar_main"
                android:layout_marginHorizontal="16dp">

                <ImageView
                    android:id="@+id/iv_page"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/page2" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="챌린지 크루의 시작일과\n목표, 시작 시간을 입력해주세요."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/iv_page"/>

                <TextView
                    android:id="@+id/tv_crew_start_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시작 시간"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_crew_start_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_crew_start_day"
                    android:layout_marginTop="8dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_crew_start_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_rectangle_grey"
                        tools:text="2023-01-01"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <ImageView
                        android:id="@+id/iv_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_calendar"
                        android:padding="12dp"
                        app:layout_constraintTop_toTopOf="@id/btn_crew_start_day"
                        app:layout_constraintEnd_toEndOf="@id/btn_crew_start_day"
                        app:layout_constraintBottom_toBottomOf="@id/btn_crew_start_day"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_crew_end_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종료일"
                    app:layout_constraintTop_toBottomOf="@id/layout_crew_start_day"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginVertical="16dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_crew_end_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_rectangle_grey"
                    tools:text="2023-01-01"
                    app:layout_constraintTop_toBottomOf="@id/tv_crew_end_day"
                    android:enabled="false"
                    android:layout_marginVertical="8dp"
                    />

                <TextView
                    android:id="@+id/tv_crew_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 기간"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_crew_end_day"
                    android:layout_marginVertical="16dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_crew_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    app:layout_constraintTop_toBottomOf="@id/tv_crew_duration"
                    android:background="@drawable/border_rectangle_grey"
                    android:layout_marginVertical="8dp"
                    />

                <TextView
                    android:id="@+id/tv_crew_duration_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="@id/btn_crew_duration"
                    app:layout_constraintEnd_toEndOf="@id/btn_crew_duration"
                    app:layout_constraintBottom_toBottomOf="@id/btn_crew_duration"
                    android:layout_marginHorizontal="16dp"/>


                <TextView
                    android:id="@+id/tv_crew_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="러닝 시작 시간"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_crew_duration"
                    android:layout_marginVertical="16dp"/>

                <TextView
                    android:id="@+id/tv_crew_time_tilde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/tv_crew_start_time"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_crew_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_crew_time_tilde"
                    app:layout_constraintTop_toTopOf="@id/tv_crew_time_tilde"
                    app:layout_constraintBottom_toBottomOf="@id/tv_crew_time_tilde"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/border_rectangle_grey"
                    tools:text="20:00"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_crew_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_crew_time_tilde"
                    app:layout_constraintTop_toTopOf="@id/tv_crew_time_tilde"
                    app:layout_constraintBottom_toBottomOf="@id/tv_crew_time_tilde"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/border_rectangle_grey"
                    tools:text="21:00"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다음"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>