<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="record"
            type="com.side.domain.model.ChallengeRunRecord" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/card_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_records"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_run_record"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/image_round"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/img" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/main_black"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@id/iv_run_record"
                    app:layout_constraintTop_toTopOf="@id/iv_run_record"
                    tools:text="감크루" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/tv_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    tools:text="2022-08-02 11:23:32" />

                <TextView
                    android:id="@+id/tv_distance"
                    style="@style/header_text"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/iv_run_record"
                    app:layout_constraintEnd_toEndOf="@+id/tv_distance_unit"
                    app:layout_constraintStart_toStartOf="@+id/tv_distance_unit"
                    app:layout_constraintBottom_toTopOf="@id/tv_distance_unit"
                    tools:text="13.3" />

                <TextView
                    android:id="@+id/tv_distance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/km"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_time_unit"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/tv_time"
                    style="@style/header_text"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_time_unit"
                    app:layout_constraintStart_toStartOf="@+id/tv_time_unit"
                    app:layout_constraintTop_toTopOf="@id/tv_distance"
                    tools:text="132" />

                <TextView
                    android:id="@+id/tv_time_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분"
                    app:layout_constraintEnd_toStartOf="@+id/tv_calorie_unit"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_distance_unit"
                    app:layout_constraintTop_toTopOf="@+id/tv_distance_unit" />

                <TextView
                    android:id="@+id/tv_calorie"
                    style="@style/header_text"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_calorie_unit"
                    app:layout_constraintStart_toStartOf="@+id/tv_calorie_unit"
                    app:layout_constraintTop_toTopOf="@id/tv_time"
                    tools:text="140" />

                <TextView
                    android:id="@+id/tv_calorie_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal"
                    app:layout_constraintEnd_toStartOf="@+id/tv_speed_unit"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_time_unit"
                    app:layout_constraintTop_toTopOf="@+id/tv_time_unit" />

                <TextView
                    android:id="@+id/tv_speed"
                    style="@style/header_text"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_speed_unit"
                    app:layout_constraintStart_toStartOf="@+id/tv_speed_unit"
                    app:layout_constraintTop_toTopOf="@id/tv_calorie"
                    tools:text="8.3" />

                <TextView
                    android:id="@+id/tv_speed_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km/h"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_calorie_unit"
                    app:layout_constraintTop_toTopOf="@+id/tv_calorie_unit" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>