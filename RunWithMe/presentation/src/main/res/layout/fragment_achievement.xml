<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_achieve_num_one"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="fitXY"
                android:src="@drawable/runcount1" />

            <ImageView
                android:id="@+id/iv_achieve_num_ten"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="fitXY"
                android:src="@drawable/runcount10" />

            <ImageView
                android:id="@+id/iv_achieve_num_hundred"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="fitXY"
                android:src="@drawable/runcount100" />

            <ImageView
                android:id="@+id/iv_achieve_num_thousand"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="fitXY"
                android:src="@drawable/runcount1000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="첫 러닝"
                android:textColor="@color/black_high_emphasis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10 러닝"
                android:textColor="@color/black_high_emphasis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100 러닝"
                android:textColor="@color/black_high_emphasis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1000 러닝"
                android:textColor="@color/black_high_emphasis" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_achieve_time_ten"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="centerInside"
                android:src="@drawable/totaltime36000" />

            <ImageView
                android:id="@+id/iv_achieve_time_hundred"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="centerInside"
                android:src="@drawable/totaltime360000" />

            <ImageView
                android:id="@+id/iv_achieve_time_thousand"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="centerInside"
                android:src="@drawable/totaltime3600000" />

            <ImageView
                android:id="@+id/iv_achieve_time_ten_thousand"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="centerInside"
                android:src="@drawable/totaltime36000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10 h"
                android:textColor="@color/black_high_emphasis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100 h"
                android:textColor="@color/black_high_emphasis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1000 h"
                android:textColor="@color/black_high_emphasis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10000 h"
                android:textColor="@color/black_high_emphasis" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_achieve_distance_ten"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="fitCenter"
                android:src="@drawable/totaldistance10000" />

            <ImageView
                android:id="@+id/iv_achieve_distance_hundred"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="fitCenter"
                android:src="@drawable/totaldistance100000" />

            <ImageView
                android:id="@+id/iv_achieve_distance_thousand"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="fitCenter"
                android:src="@drawable/totaldistance1000000" />

            <ImageView
                android:id="@+id/iv_achieve_distance_ten_thousand"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:alpha="0.2"
                android:scaleType="fitCenter"
                android:src="@drawable/totaldistance10000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10 km"
                android:textColor="@color/black_high_emphasis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100 km"
                android:textColor="@color/black_high_emphasis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1000 km"
                android:textColor="@color/black_high_emphasis" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10000 km"
                android:textColor="@color/black_high_emphasis" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_crew_history"
            style="@style/header_text"
            android:layout_marginStart="@dimen/margin_regular"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginBottom="@dimen/margin_regular"
            android:text="종료된 챌린지 크루" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_my_crew_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_my_crew_history" />

    </LinearLayout>
</layout>