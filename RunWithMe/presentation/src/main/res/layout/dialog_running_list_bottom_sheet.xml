<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="runningListVM"
            type="com.side.runwithme.view.running_list.RunningListViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dialog_top" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_my_challenge_running_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_my_current_challenge_list"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_practice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_regular">

                    <ImageView
                        android:id="@+id/iv_practice_challenge"
                        android:layout_width="@dimen/my_challenge_img_size"
                        android:layout_height="@dimen/my_challenge_img_size"
                        android:layout_gravity="center"
                        android:src="@drawable/running_challenge"
                        android:clipToOutline="true"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tv_practice_challenge_duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/main_grey"
                        android:textSize="@dimen/fontsize_caption"
                        android:layout_marginStart="24dp"
                        app:layout_constraintStart_toEndOf="@id/iv_practice_challenge"
                        app:layout_constraintTop_toTopOf="@id/iv_practice_challenge"
                        android:text="Today" />


                    <TextView
                        android:id="@+id/tv_practice_challenge_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/fontsize_h4"
                        android:fontFamily="@font/noto_sans_bold"
                        app:layout_constraintStart_toEndOf="@id/iv_practice_challenge"
                        app:layout_constraintTop_toBottomOf="@id/tv_practice_challenge_duration"
                        app:layout_constraintBottom_toTopOf="@id/tv_goal_amount_header"
                        android:text="@string/practice_running" />




                    <TextView
                        android:id="@+id/tv_goal_amount_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goal"
                        android:textColor="@color/main_grey"
                        android:textSize="@dimen/fontsize_h5"
                        android:layout_marginBottom="@dimen/margin_small"
                        app:layout_constraintStart_toStartOf="@id/tv_practice_challenge_name"
                        app:layout_constraintBottom_toBottomOf="@id/iv_practice_challenge"/>


                    <TextView
                        android:id="@+id/tv_practice_challenge_goal_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_black"
                        android:textSize="@dimen/fontsize_h5"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_goal_amount_header"
                        app:layout_constraintBottom_toBottomOf="@id/tv_goal_amount_header"
                        android:text="설정" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>